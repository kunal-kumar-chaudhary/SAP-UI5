<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    controllerName="app.LandingPage"
>
    <App>
        <Page title="{i18n>pageTitle}">
            <TextArea value="{/message}" height="20rem"/>
            <Button
                class="sapUiMarginBegin"
                text="{i18n>btnText}"
                press="onPress"
            />
        </Page>
    </App>
</mvc:View>
